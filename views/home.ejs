<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <!--Iconos-->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />
  <!-- GoogleFonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400;700&family=Ubuntu:ital,wght@0,300;0,400;0,700;1,400;1,700&display=swap"
    rel="stylesheet">
  <!-- Local CSS -->
  <link rel="stylesheet" href="css/styles.css">
  <title>Hello, world!</title>
</head>

<body class="bg-dark">
  <div class="container d-flex flex-row justify-content-center bd-highlight p-0 h-100">
    <!--ACA IRIA LA PARTE DEL LAO-->
    <%- include("partials/nav") %>

      <!--Main Content-->
      <div class="container main w-50 border-start border-end">
        <div class="mt-4">
          <div class="d-flex flex-row">
            <div>
              <p class="fs-5 flex-grow-1"><strong>Home</strong></p>
            </div>
            <div class="text-white"><i class="bi bi-stars"></i></div>
          </div>
          <form id="tweetForm" action="/tweet" method="post">
            <textarea rows="5" name="content" class="form-control bg-dark text-white" id="content" type="text"
              placeholder="Que estás pensando?" data-sb-validations="required"></textarea>
        </div>
        <!-- Submit Button -->
        <div class="modal-footer border-0">
          <button class="btn btn-register btn-form btn-danger rounded-pill rounded-2" id="submitButton" type="submit">
            Tweet
          </button>
          </form>
        </div>
        <div>
          <% for(const tweet of tweets) {%>
            <article class="border">
              <div class="d-flex flex-row justify-content-between">
                <div class="d-flex flex-row p-3">
                  <img src="<%= tweet.user.avatar %>" alt="" width="50" height="50" class="rounded-circle" />
                  <div class="d-flex flex-column mx-2 lh-1">
                    <div class="d-flex flex-row align-items-center">
                      <span class="p-0 text-white">
                        <%= tweet.user.firstname + " " + tweet.user.lastname %>
                      </span>
                      <span class="p-0 ps-1 text-secondary" style="font-size: small">@<%= tweet.user.username %></span>
                    </div>
                    <p class="pt-2">
                      <%= tweet.content %>
                    </p>
                    <form id="like" method="POST" action="/tweet/<%= user._id %>">
                      <button id="btn-like" class="btn btn-link btn-sm text-decoration-none" type="submit"><i
                          class="bi bi-heart fs-4 mt-4"></i></button>
                    </form>
                  </div>
                </div>
                <div class="pe-3">
                  <a class="fs-4 text-white" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    <i class="bi bi-three-dots"></i>
                  </a>
                  <ul class="dropdown-menu dropdown-menu-secondary p-0" aria-labelledby="dropdownMenuButton1">
                    <li>
                      <form id="btn" class="btn" method="POST" action="/tweet/<%= tweet._id %>?_method=DELETE">
                        <button class="btn btn-link btn-destroy btn-sm text-decoration-none text-danger ms-3 fs-6"
                          type="submit">Eliminar<i class="bi bi-trash ps-1"></i></button>
                      </form>
                    </li>
                  </ul>
                </div>
              </div>
            </article>
            <% } %>
        </div>
      </div>
      <!--Side Bar Trends-->
      <%- include("partials/sideBarTrends") %>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog border-3 mt-5">
            <div class="modal-content">
              <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form id="tweetForm" action="/tweet" method="post">
                  <textarea rows="5" name="content" class="form-control" id="content" type="text"
                    placeholder="Que estás pensando?" data-sb-validations="required"></textarea>
              </div>
              <!-- Submit Button -->
              <div class="modal-footer border-0">
                <button class="btn btn-register btn-form btn-danger rounded-pill rounded-2" id="submitButton"
                  type="submit">
                  Tweet
                </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <script>document.querySelector("#like").addEventListener("submit", async (e) => {
            e.preventDefault()
          })</script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
          crossorigin="anonymous"></script>
</body>

</html>