    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
      <section class="row rounded-3 shadow bg-white py-5 my-5 mx-auto justify-content-center" style="width: 60%;">
          <form action="/login" method="POST" class="col-lg-8">
            <h1 class="mb-4">Login de usuario</h1>
            <div class="my-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Ingrese su email aquí..."
                aria-describedby="email"
              />
            <div class="my-3">
              <label for="password" class="form-label">Contraseña</label>
              <input type="text" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña aquí..." />
            </div>
            <button type="submit" class="btn btn-primary mt-3">Login</button>
          </form>
      </section>
    </div>
    <!-- Footer-->
    <%- include("partials/footer") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
