    href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400;700&family=Ubuntu:ital,wght@0,300;0,400;0,700;1,400;1,700&display=swap"
    rel="stylesheet">
  <!-- Core theme CSS (includes Bootstrap)-->
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <!-- Main Content-->
  <main class="bg-dark">
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div id="form-card" class="col-md-10 col-lg-8 col-xl-7 btn-light shadow">
          <div class="contenido-card mt-5">
            <div class="d-flex flex-column align-items-center">
              <span id="logo-form">
                <svg class="logo-form" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                  <path
                    d="M416 400V464C416 490.5 394.5 512 368 512H320V464C320 455.2 312.8 448 304 448C295.2 448 288 455.2 288 464V512H224V464C224 455.2 216.8 448 208 448C199.2 448 192 455.2 192 464V512H144C117.5 512 96 490.5 96 464V400C96 399.6 96 399.3 96.01 398.9C37.48 357.8 0 294.7 0 224C0 100.3 114.6 0 256 0C397.4 0 512 100.3 512 224C512 294.7 474.5 357.8 415.1 398.9C415.1 399.3 416 399.6 416 400V400zM160 192C124.7 192 96 220.7 96 256C96 291.3 124.7 320 160 320C195.3 320 224 291.3 224 256C224 220.7 195.3 192 160 192zM352 320C387.3 320 416 291.3 416 256C416 220.7 387.3 192 352 192C316.7 192 288 220.7 288 256C288 291.3 316.7 320 352 320z" />
                </svg>
              </span>
              <h1>Crea una cuenta</h1>
            </div>
            <form id="contactForm" action="/registro" method="post">
              <div class="input-group">
                <div id="input-firstname" class="form-floating">
                  <input name="firstname" class="form-control mt-3" id="firstname" type="text"
                    placeholder="Escribe tu nombre..." data-sb-validations="required" />
                  <label class="pt-4" for="firstname">Nombre</label>
                </div>
                <div id="input-lastname" class="form-floating">
                  <input name="lastname" class="form-control mt-3" id="lastname" type="text"
                    placeholder="Escribe tu apellido..." data-sb-validations="required" />
                  <label class="pt-4" for="lastname">Apellido</label>
                </div>
              </div>
              <div id="avatar-input">
                <label for="avatar" class="form-label">Selecciona una imagen de perfíl</label>
                <input id="avatar" name="avatar" type="file" class="form-control" accept=".jpg,.png" />
              </div>
              <div class="form-floating">
                <textarea name="bio" class="form-control mt-3" id="bio"
                  placeholder="Escribe una breve descripción de tu persona..."
                  data-sb-validations="required"></textarea>
                <label for="bio">Descripción</label>
              </div>
              <div class="form-floating">
                <input name="username" class="form-control mt-3" id="username" type="text"
                  placeholder="Elige un nombre de usuario..." data-sb-validations="required" />
                <label for="username">Username</label>
              </div>
              <div class="form-floating">
                <input name="email" class="form-control mt-3" id="email" type="email"
                  placeholder="Escribe tu dirección de mail..." data-sb-validations="required" />
                <label for="email">E-mail</label>
              </div>
              <div class="form-floating">
                <input name="password" class="form-control mt-3" id="password" type="password"
                  placeholder="Elige una contraseña..." data-sb-validations="required" />
                <label for="lastname">Contraseña</label>
              </div>

              <br />
              <!-- Submit Button-->
              <button class="btn btn-submit btn-danger text-uppercase rounded mt-3" id="submitButton" type="submit">
                Enviar
              </button>
            </form>
          </div>
          <div>
            <p class="pt-1 mb-5">Si ya tienes una cuenta, ingresa <strong><a class="text-decoration-none link"
                  href="/login">aquí</a></strong>
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
  <!-- Footer-->
  <footer class="py-3 mt-auto">
    <p class="text-center">© 2022 PirateTweets, Inc</p>
  </footer>
  <!-- Bootstrap core JS-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <!-- Core theme JS-->
  <script src="/js/app.js"></script>
